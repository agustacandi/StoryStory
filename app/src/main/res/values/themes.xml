<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOutline">@color/blue</item>
    </style>

    <style name="Theme.StoryStory" parent="Base.Theme.StoryStory" />

    <style name="TextRegular">
        <item name="fontFamily">@font/inter_tight_regular</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/inter_tight_bold</item>
    </style>

    <style name="TextExtraBold">
        <item name="fontFamily">@font/inter_tight_extra_bold</item>
    </style>

    <style name="AppBarTitle" parent="TextBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadlineLanding" parent="TextExtraBold">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ButtonTitle" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_custom_input</item>
        <item name="android:fontFamily">@font/inter_tight_regular</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
</resources>